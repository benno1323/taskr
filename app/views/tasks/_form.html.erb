<div class="container">
  <%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :priority %>
      <%= f.select(:priority, Task::PRIORITY, prompt: "Select one") %>
    </div>

    <div class="form-group">
      <%= f.label :status %>
      <%= f.select(:status, Task::STATUS, prompt: "Select one") %>
    </div>

    <div class="form-group">
      <%= f.label :due_date %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-outline-primary" %>
    </div>

  <% end %>
</div>
